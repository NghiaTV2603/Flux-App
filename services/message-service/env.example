# Application
NODE_ENV=development
PORT=3005

# Database
DATABASE_URL=mongodb://flux_user:flux_password@localhost:27017/flux_message_db

# Redis
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# RabbitMQ
RABBITMQ_URL=amqp://flux_user:flux_password@localhost:5672

# External Services
USER_SERVICE_URL=http://user-service:3002
SERVER_SERVICE_URL=http://server-service:3003
REALTIME_SERVICE_URL=http://realtime-service:3006

# Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# Cache Configuration
CACHE_TTL=3600
CACHE_MAX_ITEMS=1000

# Features
ENABLE_SEARCH=true
ENABLE_ANALYTICS=true
MAX_MESSAGE_LENGTH=2000
MAX_ATTACHMENTS=10

# CORS
CORS_ORIGIN=http://localhost:3000
