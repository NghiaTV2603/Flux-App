# Email Service Environment Variables

# Spring Profile
SPRING_PROFILES_ACTIVE=development

# Server Configuration
SERVER_PORT=8085

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=flux_email_db
DB_USERNAME=flux_user
DB_PASSWORD=flux_password
DDL_AUTO=update
SHOW_SQL=false

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Email Configuration
EMAIL_FROM=noreply@flux.com
EMAIL_FROM_NAME=Flux Team
EMAIL_RETRY_MAX=3
EMAIL_RETRY_DELAY=5000
EMAIL_RATE_LIMIT_HOUR=100
EMAIL_RATE_LIMIT_DAY=1000
EMAIL_BATCH_SIZE=10
EMAIL_PROCESSING_INTERVAL=30000

# RabbitMQ Configuration
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USERNAME=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Template Configuration
TEMPLATE_CACHE_TTL=3600
THYMELEAF_CACHE=true

# Security Configuration
EMAIL_BLACKLIST_DOMAINS=10minutemail.com,tempmail.org
EMAIL_WHITELIST_ENABLED=false
EMAIL_WHITELIST_DOMAINS=

# Logging Configuration
LOG_LEVEL=INFO
